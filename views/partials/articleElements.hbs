{{!--article elemnents section--}}

<div class="container py-5">
    <div class="row">

        {{!--Todo:bar nem volt elvaras, de kesobbiekben hasznos, ha mobil n√©zetben a fohir az elso--}}
        <div class="col-lg-6 order-lg-2">
            <article class="main-article text-left text-lg-center">
                <a href="#contact">
                    <img  class="img-fluid w-100 px-0 px-lg-5" src="{{articleElements.mainArticle.img}}" alt="{{articleElements.mainArticle.title}}">
                </a>
                <a href="#articles">
                    <h1 class="font-weight-bold ">{{articleElements.mainArticle.title}}</h1>
                    <h6 class="font-weight-bold">{{articleElements.mainArticle.lead}}</h6>
                </a>
                <a href="#articles">
                    <time datetime="{{articleElements.mainArticle.date}}">{{articleElements.mainArticle.date}}</time>
                </a>
                <a href="#articles">
                    <p class="article-row__author">{{articleElements.mainArticle.author}}</p>
                </a>

                </article>
            </article>
        </div>
        <div class="col-lg-3 order-lg-1">
            <aside class="article-row">
                {{# each articleElements.leftArticles}}
                    <article class="article-row__item">
                        {{#if img}}
                            <a href="#articles">
                                <img class="img-fluid w-100" src="{{img}}" alt="{{title}}">
                            </a>
                        {{/if}}
                        <a href="#articles">
                            <h5 class="font-weight-bold">{{title}}</h5>
                        </a>
                        <div>
                            <a href="#articles">
                                <time datetime="{{date}}">{{date}}</time>
                            </a>
                            <a href="#articles">
                                <p class="article-row__author">{{author}}</p>
                            </a>
                        </div>
                    </article>
                {{/each}}
            </aside>
        </div>
        <div class="col-lg-3 order-lg-3">
            <aside>
                {{#each articleElements.rightArticles}}
                <article class="article-row__item mb-3">
                    {{#if img}}
                        <img class="w-100" src="{{img}}" alt="{{title}}">
                    {{/if}}
                    <article>
                        <a href="#articles">
                            <h5 class="font-weight-bold py-1">{{title}}</h5>
                        </a>
                        <div class="py-1">
                            <a href="#articles">
                                <time datetime="{{date}}">{{date}}</time>
                            </a>
                            <a href="#articles">
                                <p class="d-inline article-row__author">{{author}}</p>
                            </a>
                        </div>
                    </article>
                </article>
                {{/each}}
            </aside>
        </div>
    </div>
</div>