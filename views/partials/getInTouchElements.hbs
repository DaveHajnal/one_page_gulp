{{!--get in touch elements--}}

<div class="container">
    <div class="text-center pt-5 font-white">
        <h1 class="headline">{{getInTouchElements.title}}</h1>
        <h5 class="font-light">{{getInTouchElements.subtitle}}</h5>
    </div>
    <div class="row justify-content-center">
        <div class="col-lg-6 font-white">
            <p class="pt-4">{{getInTouchElements.text}}</p>
            <div class="row">
                <div class="col-xl-7">
                    <a class="contact-link" href="https://www.google.com/maps/place/{{getInTouchElements.address}}" target="_blank">
                        <span>
                            <i class="{{getInTouchElements.icon1}} pr-2" aria-hidden="true"></i>
                        </span>
                        {{getInTouchElements.address}}
                    </a>
                </div>
                <div class="col-xl-5">
                    <a class="contact-link" href="{{getInTouchElements.phoneHref}}">
                        <span>
                            <i class="{{getInTouchElements.icon2}} pr-2" aria-hidden="true"></i>
                        </span>
                        {{getInTouchElements.phoneNumber}}
                    </a>
                </div>
            </div>
            <div class="row justify-content-end">
                <div class="col-xl-5">
                    <a class="contact-link" href="{{getInTouchElements.mailHref}}">
                        <span>
                            <i class="{{getInTouchElements.icon3}} pr-2" aria-hidden="true"></i>
                        </span>
                        {{getInTouchElements.mail}}
                    </a>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <form id="contactForm" class="contact-form">
                    <div class="row">
                        {{#each getInTouchElements.formElements}}
                        <div class="col-lg-6">
                            <input class="contact-form__input" type="text" placeholder="{{placeholder}}" required>
                        </div>
                        {{/each}}
                    </div>
                    <textarea class="contact-form__input" form="contactForm" placeholder="{{getInTouchElements.formTextarea}}"></textarea>
                    <button class="btn contact-form__submit">{{getInTouchElements.formBtn}}</button>
            </form>
        </div>
    </div>
    <iframe class="p-5"
            aria-hidden="true"
            width="100%"
            height="500"
            frameborder="0"
            src="https://www.google.com/maps/embed/v1/place?key=AIzaSyByu8lBuv9H-zvhLR4-tlaOd5fWuAnnfzI&q={{getInTouchElements.address}}">
    </iframe>
</div>



