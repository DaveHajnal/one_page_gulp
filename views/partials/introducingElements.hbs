{{!--introducing elements--}}
<div class="container">
    <div class="row justify-content-center">
        <div class="text-center pt-5">
            <h1 class="headline">{{introducingElements.title}}</h1>
            <h4 class="font-light">{{introducingElements.subtitle}}</h4>
        </div>
    </div>
    <div class="row justify-content-center">
        {{#each introducingElements.elements}}
        <div class="col-md-4 text-center hovered-item mb-5">
             <div>
                 <div class="bg-intro-icon">
                     <i class="{{icon}}" aria-hidden="true"></i>
                 </div>
             </div>
             <div>
                 <h5>{{introTitle}}</h5>
                 <p class="font-light">{{introText}}</p>
             </div>
        </div>
        {{/each}}
    </div>
</div>